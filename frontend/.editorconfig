# EditorConfig: http://EditorConfig.org

root = true

# Defaults for all file types
[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 119

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.rst]
indent_size = 3

[*.scss]
indent_size = 2

[*.js]
indent_size = 2
max_line_length = 119
